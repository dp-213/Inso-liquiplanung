  locationId      String?   // FK auf Location
  svNumber        String?   // Sozialversicherungsnummer
  taxId           String?   // Steuer-ID
  dateOfBirth     DateTime?
  entryDate       DateTime?
  street          String?
  houseNumber     String?
  postalCode      String?
  city            String?
  isActive        Boolean   @default(true)
  notes           String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  case            Case      @relation(fields: [caseId], references: [id], onDelete: Cascade)
  location        Location? @relation(fields: [locationId], references: [id], onDelete: SetNull)
  salaryMonths    EmployeeSalaryMonth[]

  @@unique([caseId, personnelNumber])
  @@index([caseId])
  @@map("employees")
}

// EmployeeSalaryMonth - Monatliche Gehaltsdaten pro Mitarbeiter
model EmployeeSalaryMonth {
  id                  String   @id @default(uuid())
  employeeId          String
  year                Int
  month               Int      // 1-12
  grossSalaryCents    BigInt   // Steuerbrutto
  netSalaryCents      BigInt?  // Auszahlungsbetrag
  employerCostsCents  BigInt?  // AG-Kosten gesamt
  notes               String?
  createdAt           DateTime @default(now())

  employee            Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@unique([employeeId, year, month])
  @@index([employeeId])
  @@map("employee_salary_months")
}

